game = True

print ("Перед Вами три тропы и камень с надписью")
print ("''Сделай свой выбор, путник: 1 - пойти направо; 2 - пойти прямо; 3 - пойти налево.''")
user_choose = input("Что же Вы выберите? ")
user_choose = int(user_choose)

while user_choose == (1 or 2 or 3):
    user_choose = input("Что же Вы выберите? ")
    pass


while game:
    if user_choose == "1":
        game = False
        print ("Вы пошли направо, где нашли несметные богатства.")
    elif user_choose == "2":
        print ("Вы пошли прямо, где вас ждала пещера, полная тайн.")
        print ("(1 - войти в пещеру; 2 - уйти)")
        cave_choose = int(input("Войти в пещеру? (Введите цифру) "))
        if cave_choose == 1:
            print ("В пещере Вы встретили незнакомого старца, который обучил Вас тайнам магии.")
            game = False
        else:
            print ("Вы вернулись домой с пустыми руками.")
            game = False
    elif user_choose == "3":
        print ("Вы пошли налево, где стояло магическое древо. Когда Вы подошли к нему, то услышали шепот.")
        print (" (1 - слушать таинственный шепот; 2 - отойти от дерева)")
        tree_choose = int(input ("Что Вы сделаете? (Введите цифру) "))
        if tree_choose == 1:
            print ("Древо нашептало Вам предсказание:")
            print ("''Удача будет на Вашей стороне''")
            print ("Прислушаться к совету?")
            print ("(1 - да; 2 - нет)")
            back_choose = int(input("Что Вы выберите? "))
            if back_choose == 1:
                print ("Вы решили пойти домой по другой дороге")
                print ("По дороге домой Вы нашли среди камней блестящий меч")
                print ("Вытащить меч?")
                print ("(1 - да; 2 - нет)")
                sword_choose = int(input("Что Вы выберите? "))
                if sword_choose == 1:
                    print("Вы смогли вытащить меч с магическими свойствами. Теперь Вы непобедимы!")
                    game = False
                else:
                    game = False
                    print ("Вы вернулись домой с пустыми руками.")
            else:
                game = False
                print ("Вы вернулись домой с пустыми руками.")
        else:
            game = False
            print ("Вы вернулись домой с пустыми руками.")
